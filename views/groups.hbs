<h2 class="titulo-grupos">Grupos</h2>
    <a class="boton" href="/private/crear-group">Crear grupo</a>
    
     <div class="div-grupos">
    {{#each groups}}

    <div class="contenedor-grupo">
        <img src="{{this.image}}" alt="imagen">
        <br>
        <h3>{{name}}</h3>
        <br>
        <div class="texto">
        <p>{{description}}</p>
        <br>
        <button type="button" class="btn btn-success" data-bs-toggle="modal" data-bs-target="#contact{{@index}}">
                    Contactar
                </button>
        <a class="editar" href="/private/{{_id}}/edit-group">Editar</a>
        <form action="/private/{{id}}/delete" method="POST">
        <button type="submit">Eliminar</button>
        </form>
        </div>
    </div>
<div class="modal fade" id="contact{{@index}}" tabindex="-1" aria-labelledby="exampleModalLabel" aria-hidden="true">
                                <div class="modal-dialog">
                                    <div class="modal-content">
                                        <div class="modal-border">
                                            <div class="modal-header">
                                                <h5 class="modal-title" id="exampleModalLabel">Contacto</h5>
                                                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                                            </div>
                                            <div class="modal-body">
                                                <span class="contact-email-phone"><span class="card-text">Email:</span> {{email}}</span>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>
    {{/each}}
    </div>
    
                    </div>
  </div>


